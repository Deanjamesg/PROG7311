@using AECPrototype.ViewModel;
@model List<UserProductViewModel>;
@{
	ViewData["Title"] = "Your Products";
}

<div class="page-wrapper">
	<div class="page-content">

		<div class="page-header">
			<h1>Your Products</h1>
            <p>View a list of all your products!</p>
		</div>

		<div class="page-info">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="styled-table">
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Production Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td data-label="ProductId">@product.ProductId</td>
                                    <td data-label="Title">@product.Title</td>
                                    <td data-label="Category">@product.Category</td>
                                    <td data-label="Date">@product.Date.ToString("yyyy-MM-dd")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <a asp-action="AddProduct" asp-controller="Product" class="small-btn">Add a Product</a>
	</div>
</div>
